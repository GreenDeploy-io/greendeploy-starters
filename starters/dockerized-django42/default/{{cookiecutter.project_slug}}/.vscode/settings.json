{
  "[json]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "ruff.args": [
      "--select=E,W,F,I001,PL",
      "--ignore=E203",
      "--per-file-ignores=**/__init__.py:F401"
  ],
  "prettier.trailingComma": "none"
}