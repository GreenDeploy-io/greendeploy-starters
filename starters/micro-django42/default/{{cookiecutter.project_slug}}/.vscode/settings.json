{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
    },
    "ruff.lint.args": [
        "--select=E,W,F,I001,PL",
        "--ignore=E203",
        "--per-file-ignores=**/__init__.py:F401"
    ]
}